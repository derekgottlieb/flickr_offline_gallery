<html>
<head></head>
<body>
<img src="<%= source %>" /><br>
<% sizes.each do |size| %>
<textarea id="<%= size.key %>" style="height: 60px; width:800px;">
<a href="<%= photo_url %>" title="<%= title %> by <%= author %>, on Flickr"><img src="<%= size.source %>" width="<%= size.width %>" height="<%= size.height %>" alt="<%= title %>"></a>
</textarea>
<% end %>
<br>
<% sizes.each do |size| %>
  <button onclick="script:showId('<%= size.key %>');"><%= size.label %> </button>
<% end %>
<script>
function hideTextAreas() {
  var tags = document.getElementsByTagName('textarea'),
      i = tags.length;
    while(i--)
    {
        tags[i].style.display = "none";
    }
};
hideTextAreas();

function showId(id) {
  hideTextAreas();
  document.getElementById(id).style.display = "";
};
showId("medium_800");
</script>
</body>
</html>


